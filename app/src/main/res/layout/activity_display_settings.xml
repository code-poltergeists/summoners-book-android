<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplaySettings" android:background="#CEC9C9">
    <android.support.constraint.ConstraintLayout
            android:layout_width="727dp"
            android:layout_height="417dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/radioGroup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <CheckBox
                android:text="@string/music"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:id="@+id/music" android:background="#FAF3EEEE"
                android:textSize="36sp" android:textStyle="normal" android:gravity="center"
                android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="228dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="228dp"/>
        <CheckBox
                android:text="@string/sounds"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:id="@+id/sounds" android:background="#FAF3EEEE"
                android:textSize="36sp" android:textStyle="normal" android:gravity="center"
                android:layout_marginTop="184dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="228dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="228dp"/>
        <CheckBox
                android:text="@string/notifications"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:id="@+id/notifications" android:background="#FAF3EEEE"
                android:textSize="36sp" android:textStyle="normal" android:gravity="center"
                android:layout_marginTop="300dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="228dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="228dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>